<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_center_dialog"
    android:padding="16dp">

    <View
        android:id="@+id/divider1"
        android:layout_width="43dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/divider_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rg_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/divider1">

        <RadioButton
            android:id="@+id/rb_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_ripple_click"
            android:button="@null"
            android:checked="true"
            android:drawableEnd="@drawable/custom_check_box"
            android:gravity="center_vertical"
            android:paddingStart="26dp"
            android:paddingEnd="26dp"
            android:text="Date"
            android:textColor="#7E838D" />

        <RadioButton
            android:id="@+id/rb_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_ripple_click"
            android:button="@null"
            android:drawableEnd="@drawable/custom_check_box"
            android:gravity="center_vertical"
            android:paddingStart="26dp"
            android:paddingEnd="26dp"
            android:text="Name"
            android:textColor="#7E838D" />

    </RadioGroup>

    <View
        android:id="@+id/divider2"
        android:layout_width="43dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/divider_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_unit" />

    <RadioGroup
        android:id="@+id/rg_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/divider2">

        <RadioButton
            android:id="@+id/rb_ascending"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_ripple_click"
            android:button="@null"
            android:checked="true"
            android:drawableEnd="@drawable/custom_check_box"
            android:gravity="center_vertical"
            android:paddingStart="26dp"
            android:paddingEnd="26dp"
            android:text="Ascending"
            android:textColor="#7E838D" />

        <RadioButton
            android:id="@+id/rb_descending"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_ripple_click"
            android:button="@null"
            android:drawableEnd="@drawable/custom_check_box"
            android:gravity="center_vertical"
            android:paddingStart="26dp"
            android:paddingEnd="26dp"
            android:text="Descending"
            android:textColor="#7E838D" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_dialog_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_ripple_click"
        android:padding="10dp"
        android:text="Ok"
        android:textColor="@color/light_blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_sort" />

    <TextView
        android:id="@+id/tv_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_ripple_click"
        android:padding="10dp"
        android:text="Cancel"
        android:textColor="@color/color_B5B9D2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_dialog_ok"
        app:layout_constraintTop_toBottomOf="@id/rg_sort" />
</androidx.constraintlayout.widget.ConstraintLayout>