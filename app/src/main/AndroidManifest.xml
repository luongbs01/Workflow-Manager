<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.workflowmanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkflowManager">
        <activity
            android:name=".activity.ListActivity"
            android:exported="false" />
        <activity
            android:name=".activity.StepActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SignInActivity"
            android:exported="false"></activity>
        <activity
            android:name=".activity.WorkflowRunActivity"
            android:exported="false" />
        <activity
            android:name=".activity.WorkflowJobActivity"
            android:exported="false" />
        <activity
            android:name=".activity.WorkflowActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>